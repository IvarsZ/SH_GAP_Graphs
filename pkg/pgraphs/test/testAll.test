LoadPackage("pgraphs");

graphPToSuccessors := function(graph)
  local successors, vertex;
  
  successors := [];
  for vertex in [1..VertexCountP(graph)] do
    successors[vertex] := FromAtomicList(VertexSuccessorsP(graph, vertex));
  od;

  return successors;
end;

